<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    app:cardElevation="11dp"
    android:foreground="@drawable/effect"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="21dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:id="@+id/sh1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="name"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/sh11"
            android:layout_toLeftOf="@+id/sh1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/sh1" />
        <TextView
            android:layout_marginStart="5dp"
            android:id="@+id/sh2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@+id/sh1"
            android:text="State :-"/>
        <TextView
            android:id="@+id/sh22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sh11"
            android:text="username"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/sh1" />
        <TextView
            android:id="@+id/sh3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sh2"
            android:layout_marginStart="5dp"
            android:text="PhoneNo :-"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sh33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sh22"
            android:text="username"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/sh1" />

        <TextView

            android:id="@+id/sh4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sh3"
            android:layout_marginStart="5dp"
            android:text="Gender :-"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sh44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sh33"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/sh1"
            android:text="username"
            android:textColor="@color/purple_700"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>